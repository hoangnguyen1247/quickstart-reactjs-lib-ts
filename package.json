        "@babel/preset-typescript": "^7.10.4",
        "@rollup/plugin-typescript": "^5.0.2",
        "babel-loader": "^8.1.0",
        "bootstrap": "^4.5.2",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^6.1.0",
